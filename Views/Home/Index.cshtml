@model WebApplication2.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}
@using Microsoft.AspNetCore.Identity
@using WebApplication2.Models.Repositories
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ICategoryRepository CategoryRepository

@{
    var isSignedIn = SignInManager.IsSignedIn(User);
    var isAuthorized = User.IsInRole("Admin") || User.IsInRole("Manager");
    var categories = CategoryRepository.GetAll().Take(4).ToList();
}

    @if (categories.Any())
    {
        <section class="py-16 bg-white">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Catégories Populaires</h2>
                    <p class="text-gray-600 text-lg">Explorez nos différentes catégories de produits</p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                    @foreach (var category in categories)
                    {
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.CategoryId"
                           class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl p-6 text-center hover:shadow-lg transition-all duration-300 transform hover:scale-105 border border-indigo-100">
                            <div class="w-16 h-16 mx-auto mb-4 bg-indigo-600 rounded-full flex items-center justify-center">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                                </svg>
                            </div>
                            <h3 class="font-semibold text-gray-800 text-lg">@category.CategoryName</h3>
                            <p class="text-sm text-gray-600 mt-2">Voir les produits →</p>
                        </a>
                    }
                </div>
            </div>
        </section>
    }

    <!-- ========== SECTION TOP 4 PRODUITS LES PLUS VENDUS ========== -->
    <section id="top-products" class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Nos Produits les Plus Vendus</h2>
                <p class="text-gray-600 text-lg">Découvrez les favoris de nos clients</p>
            </div>

            @if (Model.TopProducts != null && Model.TopProducts.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    @foreach (var product in Model.TopProducts)
                    {
                        var photoPath = Url.Content("~/images/" + (product.Image ?? "noimage.jpg"));
                        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
                            <!-- Badge Best Seller -->
                            <div class="relative">
                                <img src="@photoPath" class="w-full h-48 object-cover" alt="@product.Name" />
                                <div class="absolute top-3 right-3 bg-red-500 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg">
                                    BEST SELLER
                                </div>
                            </div>
                            
                            <div class="p-5">
                                <h3 class="font-semibold text-gray-800 mb-2 text-lg">@product.Name</h3>
                                <p class="text-sm text-gray-500 mb-3">@product.Category?.CategoryName</p>
                                
                                <!-- Rating 4 étoiles statiques -->
                                <div class="flex items-center mb-3">
                                    <div class="flex text-yellow-400">
                                        @for (int i = 0; i < 4; i++)
                                        {
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                            </svg>
                                        }
                                        <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                    </div>
                                    <span class="ml-2 text-sm text-gray-600">(4.0)</span>
                                </div>

                                <div class="flex items-center justify-between mb-4">
                                    <span class="text-2xl font-bold text-indigo-600">@product.Price DT</span>
                                    <span class="text-sm text-gray-500">Stock: @product.QteStock</span>
                                </div>

                                <div class="flex gap-2">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" 
                                       class="flex-1 bg-indigo-600 text-white text-center py-2 rounded-lg hover:bg-indigo-700 transition font-medium">
                                        Voir détails
                                    </a>
                                    @if (isSignedIn && User.IsInRole("User"))
                                    {
                                        <a asp-controller="Panier" asp-action="AddProduct" asp-route-id="@product.ProductId" 
                                           class="bg-gray-100 text-indigo-600 px-4 py-2 rounded-lg hover:bg-gray-200 transition">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                            </svg>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <p class="text-gray-500">Aucun produit disponible pour le moment.</p>
                </div>
            }
        </div>
    </section>

    <!-- ========== SECTION AVANTAGES ========== -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid md:grid-cols-3 gap-8">
                <div class="text-center p-6 rounded-xl hover:shadow-lg transition-all duration-300">
                    <div class="w-16 h-16 mx-auto mb-4 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Livraison Rapide</h3>
                    <p class="text-gray-600">Expédition sous 24-48h pour tous vos commandes</p>
                </div>

                <div class="text-center p-6 rounded-xl hover:shadow-lg transition-all duration-300">
                    <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Paiement Sécurisé</h3>
                    <p class="text-gray-600">Transactions protégées et cryptées</p>
                </div>

                <div class="text-center p-6 rounded-xl hover:shadow-lg transition-all duration-300">
                    <div class="w-16 h-16 mx-auto mb-4 bg-purple-100 rounded-full flex items-center justify-center">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Support Client</h3>
                    <p class="text-gray-600">Assistance disponible 7j/7 pour vous aider</p>
                </div>
            </div>
        </div>
    </section>

    <!-- ========== SECTION AVIS CLIENTS ========== -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Ce Que Disent Nos Clients</h2>
                <p class="text-gray-600 text-lg">Découvrez les témoignages de nos clients satisfaits</p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                @foreach (var review in Model.Reviews)
                {
                    <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-xl transition-all duration-300 border border-gray-100">
                        <div class="flex items-center mb-4">
                            <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center text-2xl mr-4">
                                @review.Avatar
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800">@review.CustomerName</h4>
                                <div class="flex text-yellow-400 mt-1">
                                    @for (int i = 0; i < review.Rating; i++)
                                    {
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                    }
                                </div>
                            </div>
                        </div>
                        <p class="text-gray-600 italic">"@review.Comment"</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- ========== SECTION CATÉGORIES POPULAIRES ========== -->

    <!-- ========== SECTION NEWSLETTER ========== -->
    <section class="py-16 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
        <div class="max-w-4xl mx-auto px-6 text-center">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Restez Informé</h2>
            <p class="text-xl text-indigo-100 mb-8">Recevez nos dernières offres et nouveautés directement dans votre boîte mail</p>
            <form class="flex flex-col md:flex-row gap-4 max-w-md mx-auto">
                <input type="email" placeholder="Votre adresse email" 
                       class="flex-1 px-6 py-3 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-white">
                <button type="submit" 
                        class="bg-white text-indigo-600 font-bold px-8 py-3 rounded-lg hover:bg-indigo-50 transition shadow-lg">
                    S'abonner
                </button>
            </form>
            <p class="text-sm text-indigo-200 mt-4">Nous respectons votre vie privée. Désabonnez-vous à tout moment.</p>
        </div>
    </section>
@* } *@

<style>
    @@keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes blob {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }
        33% {
            transform: translate(30px, -50px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
    }
    
    @@keyframes bounce-subtle {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-5px);
        }
    }
    
    @@keyframes pulse-slow {
        0%, 100% {
            opacity: 0.2;
            transform: scale(1);
        }
        50% {
            opacity: 0.4;
            transform: scale(1.05);
        }
    }
    
    .animate-fade-in {
        animation: fade-in 0.8s ease-out;
    }
    
    .animate-fade-in-up {
        animation: fade-in-up 1s ease-out;
    }
    
    .animate-fade-in-up-delay {
        animation: fade-in-up 1s ease-out 0.2s both;
    }
    
    .animate-fade-in-up-delay-2 {
        animation: fade-in-up 1s ease-out 0.4s both;
    }
    
    .animate-blob {
        animation: blob 7s infinite;
    }
    
    .animate-bounce-subtle {
        animation: bounce-subtle 2s ease-in-out infinite;
    }
    
    .animate-pulse-slow {
        animation: pulse-slow 3s ease-in-out infinite;
    }
    
    .animation-delay-2000 {
        animation-delay: 2s;
    }
    
    .animation-delay-4000 {
        animation-delay: 4s;
    }
</style>
