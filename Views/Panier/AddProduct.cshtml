@{
    ViewBag.Title = "Add Product";
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl font-bold text-gray-800 mb-3">My cart</h2>
        @if (ViewBag.Liste.Count > 0)
        {
            <div class="bg-white rounded-xl shadow overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Product</th>
                                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Details</th>
                                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700" style="width:220px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                        @foreach (var item in ViewBag.Liste)
                        {
                            <tr id="row-@item.Prod.ProductId">
                                <td class="px-4 py-3" style="width:260px">
                                    <img src="~/images/@item.Prod.Image" class="rounded-lg" style="width:240px;height:160px;object-fit:cover" alt="@item.Prod.Name" />
                                </td>
                                <td class="px-4 py-3">
                                    <div class="font-semibold text-gray-800">@item.Prod.Name</div>
                                    <div class="text-gray-500 text-sm">@item.Prod.Category.CategoryName</div>
                                    <div class="mt-2">Quantity: <span id="quantite_@item.Prod.ProductId" class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm">@item.quantite</span></div>
                                    <div class="mt-2 text-sm">Subtotal: <span id="total_@item.Prod.ProductId" class="font-semibold">@item.TotalPrice</span></div>
                                </td>
                                <td class="px-4 py-3">
                                    <div class="flex gap-2">
                                        <a href="#" class="PlusProducts bg-green-50 text-green-600 px-3 py-2 rounded-lg text-sm hover:bg-green-100 transition flex items-center justify-center quantity-btn btn-hover-lift" data-id="@item.Prod.ProductId" title="Add">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                            </svg>
                                        </a>
                                        <a href="#" class="MinProducts bg-yellow-50 text-yellow-600 px-3 py-2 rounded-lg text-sm hover:bg-yellow-100 transition flex items-center justify-center quantity-btn btn-hover-lift" data-id="@item.Prod.ProductId" title="Decrease">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                                            </svg>
                                        </a>
                                        <a href="#" class="RemoveLink bg-red-50 text-red-600 px-3 py-2 rounded-lg text-sm hover:bg-red-100 transition flex items-center justify-center quantity-btn btn-hover-lift" data-id="@item.Prod.ProductId" title="Remove">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="flex justify-between items-center mt-4">
                <div class="text-lg font-semibold">Total: <span id="totalapayer" class="text-indigo-600">@ViewBag.total</span></div>
                <div class="flex gap-3">
                    <a href="~/Product/Index" class="bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition btn-hover-lift font-medium flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Continue Shopping
                    </a>
                    <a href="~/Panier/Checkout" class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium flex items-center gap-2 shadow-lg">
                        Checkout
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state bg-white rounded-xl shadow p-12 text-center">
                <div class="empty-state-icon">
                    <img src="~/images/panier_vide.png" alt="Empty cart" class="mx-auto mb-4" style="width:200px;height:auto;" />
                </div>
                <h3 class="empty-state-title">Your cart is empty!</h3>
                <p class="empty-state-message">Discover our products and treat yourself</p>
                <a href="~/Product/Index" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    View Products
                </a>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/Monscript.js" type="text/javascript"></script>
}
