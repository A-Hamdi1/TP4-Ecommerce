@model WebApplication2.Models.Category

@{
    ViewData["Title"] = "Delete category";
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <div class="bg-white rounded-xl shadow p-6 max-w-lg mx-auto">
            <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </div>
                <h4 class="mb-0 text-red-600 font-semibold text-2xl">Delete Category</h4>
            </div>

            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r-lg">
                <div class="flex items-start">
                    <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <div>
                        <h5 class="font-semibold text-red-800 mb-1">Warning: This action cannot be undone!</h5>
                        <p class="text-red-700 text-sm">Deleting this category will permanently remove it from the system.</p>
                    </div>
                </div>
            </div>

            <dl class="grid grid-cols-1 gap-4 mb-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">Category name</dt>
                    <dd class="text-gray-800 font-medium">@Html.DisplayFor(model => model.CategoryName)</dd>
                </div>
            </dl>

            <form asp-action="Delete" class="mt-6">
                <input type="hidden" asp-for="CategoryId" />
                <div class="flex justify-between gap-3 pt-6 border-t border-gray-200">
                    <a asp-action="Index" 
                       class="px-6 py-3 flex items-center justify-center gap-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-200 shadow-sm hover:shadow-md font-medium"
                       title="Cancel">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Cancel
                    </a>
                    <button type="submit" 
                            class="px-6 py-3 flex items-center justify-center gap-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all duration-200 shadow-md hover:shadow-lg font-medium btn-hover-lift"
                            title="Delete"
                            id="deleteBtn">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete Category
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.getElementById('deleteBtn').addEventListener('click', function(e) {
            if (!confirm('Are you absolutely sure you want to delete this category? This action cannot be undone!')) {
                e.preventDefault();
            }
        });
    </script>
}
