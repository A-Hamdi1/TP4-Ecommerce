@model IEnumerable<WebApplication2.Models.Category>

<div class="bg-white rounded-2xl shadow p-4">
    <div class="border-b border-gray-200 pb-2 mb-3 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <h2 class="text-lg font-semibold text-gray-800">Categories</h2>
    </div>

    <ul class="space-y-1">
        <!-- Lien Tous les produits -->
        <li>
            <a asp-action="Index"
               class="block px-3 py-2 rounded-lg font-medium text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors">
                Tous
            </a>
        </li>

        @if (Model == null || !Model.Any())
        {
            <li class="px-3 py-2 text-gray-400 italic">No categories available.</li>
        }
        else
        {
            @foreach (var categorie in Model)
            {
                <li>
                    <a asp-controller="Product"
                       asp-action="Index"
                       asp-route-categoryId="@categorie.CategoryId"
                       class="block px-3 py-2 rounded-lg font-medium text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition-colors">
                        @categorie.CategoryName
                    </a>
                </li>
            }
        }
    </ul>
</div>
