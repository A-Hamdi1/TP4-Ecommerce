<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "PhantomShop")</title>

    <!-- ✅ TailwindCSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Optional: Modern font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Norican&display=swap" rel="stylesheet">

    <!-- UI Improvements CSS -->
    <link href="~/css/ui-improvements.css" rel="stylesheet" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .font-norican {
            font-family: 'Norican', cursive;
        }
    </style>
</head>

@using Microsoft.AspNetCore.Identity
@using WebApplication2.Models.Repositories
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ICategoryRepository CategoryRepository
@inject IWishlistRepository WishlistRepository

@{
            var isSignedIn = SignInManager.IsSignedIn(User);
            var isAuthorized = User.IsInRole("Admin") || User.IsInRole("Manager");
            var wishlistCount = isSignedIn ? WishlistRepository.GetWishlistCount(User.FindFirstValue(ClaimTypes.NameIdentifier)) : 0;
}

<body class="flex flex-col min-h-screen bg-gray-50 text-gray-800">
    <!-- ✅ Header / Navbar -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto flex flex-wrap items-center justify-between px-4 py-3">
            <!-- Left side: Logo + Navigation menu -->
            <div class="flex items-center gap-6">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="text-2xl font-bold text-indigo-600 flex items-center gap-2">
                    <img src="~/images/favicon.png" alt="Northern" class="h-8 w-8" />
                    <span class="font-norican">NORTHERN</span>
                </a>
                
                <!-- Mobile button -->
                <button id="nav-toggle" class="block md:hidden text-gray-700 focus:outline-none p-2">
                    <div class="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </button>

                <!-- Main menu - Left side -->
                <div id="nav-menu" class="hidden w-full md:flex md:w-auto md:items-center">
                    <ul class="flex flex-col md:flex-row md:gap-6 mt-3 md:mt-0">
                        <li><a asp-controller="Home" asp-action="Index" class="hover:text-indigo-600 transition-colors">Home</a></li>

                        <!-- Products -->
                        <li class="relative">
                            <button class="dropdown-toggle hover:text-indigo-600 flex items-center gap-1 transition-colors" data-dropdown="articles">
                                <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                                </svg>
                                Products
                                <svg class="nav-icon ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>
                            <ul class="dropdown-menu absolute left-0 mt-2 bg-white shadow-md rounded-md py-2 w-48 hidden z-50" data-dropdown-menu="articles">
                                <li><a asp-controller="Product" asp-action="Index" class="block px-4 py-2 hover:bg-gray-100">All products</a></li>
                                @if (isSignedIn && isAuthorized)
                                {
                                    <li><a asp-controller="Product" asp-action="Create" class="block px-4 py-2 hover:bg-gray-100">New product</a></li>
                                }
                            </ul>
                        </li>

                        @if (isSignedIn && isAuthorized)
                        {
                            <!-- Categories -->
                            <li class="relative">
                                <button class="dropdown-toggle hover:text-indigo-600 flex items-center gap-1 transition-colors" data-dropdown="categories">
                                    <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                                    </svg>
                                    Categories
                                    <svg class="nav-icon ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                    </svg>
                                </button>
                                <ul class="dropdown-menu absolute left-0 mt-2 bg-white shadow-md rounded-md py-2 w-48 hidden z-50" data-dropdown-menu="categories">
                                    <li><a asp-controller="Category" asp-action="Index" class="block px-4 py-2 hover:bg-gray-100">All categories</a></li>
                                    <li><a asp-controller="Category" asp-action="Create" class="block px-4 py-2 hover:bg-gray-100">New category</a></li>
                                </ul>
                            </li>
                        }

                        @if (isSignedIn && User.IsInRole("Admin"))
                        {
                            <!-- Admin -->
                            <li class="relative">
                                <button class="dropdown-toggle hover:text-indigo-600 flex items-center gap-1 transition-colors" data-dropdown="admin">
                                    <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                    Administration
                                    <svg class="nav-icon ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                    </svg>
                                </button>
                                <ul class="dropdown-menu absolute left-0 mt-2 bg-white shadow-md rounded-md py-2 w-48 hidden z-50" data-dropdown-menu="admin">
                                    <li><a asp-controller="Admin" asp-action="ListRoles" class="block px-4 py-2 hover:bg-gray-100">Roles</a></li>
                                    <li><a asp-controller="Admin" asp-action="CreateRole" class="block px-4 py-2 hover:bg-gray-100">New role</a></li>
                                </ul>
                            </li>
                        }

                        @if (isSignedIn && User.IsInRole("User"))
                        {
                            <li>
                                <a asp-controller="Wishlist" asp-action="Index" class="hover:text-indigo-600 flex items-center gap-1 transition-colors">
                                    <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                    </svg>
                                    Wishlist
                                    @if (wishlistCount > 0)
                                    {
                                        <span class="ml-1 bg-red-500 text-white rounded-full text-xs px-2 py-0.5 animate-pulse">@wishlistCount</span>
                                    }
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Panier" asp-action="Index" class="hover:text-indigo-600 flex items-center gap-1 transition-colors">
                                    <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                    </svg>
                                    Cart
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Right side: Search bar + Auth (Register/Login) -->
            <div id="nav-menu-right" class="hidden w-full md:flex md:w-auto md:items-center md:ml-auto">
                <!-- Search bar -->
                <form class="mt-3 md:mt-0 flex mr-6" asp-controller="Product" asp-action="Search">
                    <input type="search" name="val" placeholder="Search..."
                           class="border border-gray-300 rounded-l-md px-3 py-1 focus:ring-2 focus:ring-indigo-400 focus:outline-none transition-all" />
                    <button type="submit" class="bg-indigo-600 text-white px-4 rounded-r-md hover:bg-indigo-700 transition-colors flex items-center">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                </form>

                <!-- Auth -->
                <ul class="flex flex-col md:flex-row md:gap-4 mt-3 md:mt-0">
                    @if (isSignedIn)
                    {
                        <li class="relative">
                            <button class="dropdown-toggle hover:text-indigo-600 flex items-center gap-1 transition-colors" data-dropdown="user">
                                <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                @User.Identity.Name
                                <svg class="nav-icon ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>
                            <ul class="dropdown-menu absolute hidden bg-white shadow-md rounded-md mt-2 py-2 w-48 right-0 z-50" data-dropdown-menu="user">
                                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                {
                                    <li><a asp-controller="Dashboard" asp-action="Index" class="block px-4 py-2 hover:bg-gray-100">Dashboard</a></li>
                                    <li><a asp-controller="ManagerOrder" asp-action="Index" class="block px-4 py-2 hover:bg-gray-100">Manage orders</a></li>
                                }
                                else
                                {
                                    <li><a asp-controller="Orders" asp-action="Index" class="block px-4 py-2 hover:bg-gray-100">My orders</a></li>
                                }
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        <button type="submit" class="w-full text-left px-4 py-2 hover:bg-gray-100">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Register" class="hover:text-indigo-600 flex items-center gap-1 transition-colors">
                                <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                                </svg>
                                Register
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Login" class="hover:text-indigo-600 flex items-center gap-1 transition-colors">
                                <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                                </svg>
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <!-- ✅ Corps -->
    <main class="flex-grow container mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <!-- ✅ Footer -->
    <footer class="bg-white border-t mt-auto">
        <div class="container mx-auto px-4 py-4 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
            <span>&copy; 2025 · NORTHERN</span>
            <div class="flex gap-4 mt-2 md:mt-0">
                <a asp-controller="Contact" asp-action="Index" class="hover:text-indigo-600 transition-colors flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Contact
                </a>
                <a asp-controller="Home" asp-action="Privacy" class="hover:text-indigo-600 transition-colors flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    Privacy
                </a>
            </div>
        </div>
    </footer>

    <!-- ✅ Scripts -->
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/lightbox.js" asp-append-version="true"></script>
    <script src="~/js/ui-enhancements.js" asp-append-version="true"></script>
    <script>
        // Mobile menu
        const navToggle = document.getElementById('nav-toggle');
        const navMenu = document.getElementById('nav-menu');
        const navMenuRight = document.getElementById('nav-menu-right');
        if (navToggle) {
            navToggle.addEventListener('click', () => {
                if (navMenu) {
                    navMenu.classList.toggle('hidden');
                }
                if (navMenuRight) {
                    navMenuRight.classList.toggle('hidden');
                }
                const hamburger = navToggle.querySelector('.hamburger');
                if (hamburger) {
                    hamburger.classList.toggle('active');
                }
            });
        }

        // Dropdowns on click
        document.querySelectorAll('.dropdown-toggle').forEach(button => {
            button.addEventListener('click', (e) => {
                e.stopPropagation();
                const dropdownId = button.getAttribute('data-dropdown');
                const menu = document.querySelector(`[data-dropdown-menu="${dropdownId}"]`);

                // Close all other dropdowns
                document.querySelectorAll('.dropdown-menu').forEach(m => {
                    if (m !== menu) {
                        m.classList.add('hidden');
                    }
                });

                // Toggle current dropdown
                if (menu) {
                    menu.classList.toggle('hidden');
                }
            });
        });

        // Close dropdowns if clicking outside
        window.addEventListener('click', function(e) {
            if (!e.target.closest('.dropdown-toggle') && !e.target.closest('.dropdown-menu')) {
                document.querySelectorAll('.dropdown-menu').forEach(menu => {
                    menu.classList.add('hidden');
                });
            }
        });
    </script>

    @if (SignInManager.IsSignedIn(User))
    {
        <script>var currentUserName = '@User.Identity.Name';</script>
    }
    <script src="~/js/wishlist.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
