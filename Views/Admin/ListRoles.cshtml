@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All roles";

    string GetRoleColor(string roleName)
    {
        return roleName?.ToLower() switch
        {
            "admin" => "from-red-100 to-red-200 text-red-600",
            "manager" => "from-blue-100 to-blue-200 text-blue-600",
            "user" => "from-green-100 to-green-200 text-green-600",
            _ => "from-gray-100 to-gray-200 text-gray-600"
        };
    }
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-1">All Roles</h1>
                <p class="text-gray-500 text-sm">Manage user roles and permissions</p>
            </div>
            <a class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium flex items-center gap-2 shadow-lg" asp-controller="Admin" asp-action="CreateRole">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Create Role
            </a>
        </div>

        @if (Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var role in Model)
                {
                    <div class="bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-100 hover:border-indigo-200">
                        <div class="p-6 flex flex-col items-center border-b border-gray-100">
                            <div class="w-20 h-20 mx-auto mb-4 bg-gradient-to-br @GetRoleColor(role.Name) rounded-full flex items-center justify-center">
                                <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <h5 class="font-semibold text-gray-800 text-xl mb-1">@role.Name</h5>
                            <small class="text-gray-500 text-xs font-mono">@role.Id.Substring(0, Math.Min(8, role.Id.Length))...</small>
                        </div>
                        <div class="p-4 bg-gray-50 flex justify-between items-center">
                            <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id"
                               class="w-10 h-10 flex items-center justify-center bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 hover:scale-110 transition-all duration-200 shadow-sm hover:shadow-md"
                               title="Edit">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </a>
                            <div class="flex items-center gap-2">
                                <span id="confirmDeleteSpan_@role.Id" style="display: none;" class="flex items-center gap-2">
                                    <span class="text-xs text-gray-600 font-medium">Confirm?</span>
                                    <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id" class="inline">
                                        <button type="submit" class="w-8 h-8 flex items-center justify-center bg-red-600 text-white rounded-lg hover:bg-red-700 hover:scale-110 transition-all duration-200 shadow-sm hover:shadow-md">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                            </svg>
                                        </button>
                                    </form>
                                    <button type="button" class="w-8 h-8 flex items-center justify-center bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 hover:scale-110 transition-all duration-200 shadow-sm hover:shadow-md"
                                            onclick="confirmDelete('@role.Id', false)">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                    </button>
                                </span>
                                <span id="deleteSpan_@role.Id">
                                    <button type="button" class="w-10 h-10 flex items-center justify-center bg-red-100 text-red-600 rounded-lg hover:bg-red-200 hover:scale-110 transition-all duration-200 shadow-sm hover:shadow-md"
                                            onclick="confirmDelete('@role.Id', true)"
                                            title="Delete">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state bg-white rounded-xl shadow p-12 text-center">
                <div class="empty-state-icon">
                    <svg class="w-16 h-16 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>
                <h5 class="empty-state-title">No roles created yet</h5>
                <p class="empty-state-message">Get started by creating your first role</p>
                <a class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium inline-flex items-center gap-2" asp-controller="Admin" asp-action="CreateRole">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create role
                </a>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('[id^="confirmDeleteSpan_"]').forEach(el => el.style.display = 'none');
        });
        function confirmDelete(roleId, show) {
            document.getElementById('confirmDeleteSpan_' + roleId).style.display = show ? 'flex' : 'none';
            document.getElementById('deleteSpan_' + roleId).style.display = show ? 'none' : 'inline';
        }
    </script>
}
