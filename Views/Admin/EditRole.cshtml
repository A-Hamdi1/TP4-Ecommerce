@model WebApplication2.ViewModels.EditRoleViewModel
@{
    ViewBag.Title = "Edit role";
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <div class="flex justify-center">
            <div class="w-full max-w-2xl">
                <div class="bg-white rounded-xl shadow p-6">
                    <div class="text-center mb-6">
                        <div class="inline-flex items-center justify-center w-16 h-16 bg-yellow-100 rounded-full mb-3">
                            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                        </div>
                        <h4 class="mb-0 text-indigo-600 font-semibold text-2xl">Edit Role</h4>
                        <p class="text-gray-500 text-sm mt-1">Modify role details and manage users</p>
                    </div>
                    <form method="post" novalidate>
                        <div class="mb-4">
                            <label asp-for="Id" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="Id" disabled class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-100">
                        </div>
                        <div class="mb-4">
                            <label asp-for="RoleName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="RoleName" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none">
                            <span asp-validation-for="RoleName" class="text-red-500 text-sm"></span>
                        </div>
                        <div asp-validation-summary="All" class="text-red-500 text-sm mb-3"></div>
                        <div class="flex justify-between gap-3 mb-6 pt-6 border-t border-gray-200">
                            <a asp-action="ListRoles" 
                               class="px-6 py-3 flex items-center justify-center gap-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-200 shadow-sm hover:shadow-md font-medium"
                               title="Cancel">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                </svg>
                                Cancel
                            </a>
                            <button type="submit" 
                                    class="px-6 py-3 flex items-center justify-center gap-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-all duration-200 shadow-md hover:shadow-lg font-medium btn-hover-lift"
                                    title="Update">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                Save Changes
                            </button>
                        </div>

                        <div class="bg-white border border-gray-200 rounded-lg mt-6">
                            <div class="p-4 border-b border-gray-200 flex items-center gap-2">
                                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                </svg>
                                <h5 class="mb-0 font-semibold text-gray-800">Role Users</h5>
                                <span class="ml-auto bg-indigo-100 text-indigo-600 text-xs font-semibold px-2 py-1 rounded-full">@Model.Users.Count()</span>
                            </div>
                            <div class="p-4">
                                @if (Model.Users.Any())
                                {
                                    <ul class="divide-y divide-gray-100">
                                        @foreach (var user in Model.Users)
                                        {
                                            <li class="py-3 flex items-center gap-3">
                                                <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center">
                                                    <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                    </svg>
                                                </div>
                                                <span class="text-gray-700 font-medium">@user</span>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <div class="text-center py-8">
                                        <svg class="w-12 h-12 text-gray-300 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                        </svg>
                                        <p class="text-gray-500 mb-0">No users assigned to this role</p>
                                    </div>
                                }
                            </div>
                            <div class="p-4 border-t border-gray-200">
                                <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" 
                                   class="w-full px-4 py-2 flex items-center justify-center gap-2 bg-indigo-100 text-indigo-600 rounded-lg hover:bg-indigo-200 transition-all duration-200 shadow-sm hover:shadow-md font-medium"
                                   title="Manage users">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                    </svg>
                                    Manage Users
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
