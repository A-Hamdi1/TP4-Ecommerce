@model WebApplication2.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <div class="mb-6">
            <div class="flex items-center gap-3 mb-2">
                <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 mb-0">Dashboard</h1>
                    <p class="text-gray-500 text-sm mt-1">Analytics and insights overview</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center gap-2 mb-4">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="text-lg font-semibold text-gray-800 mb-0">Date Range Filter</h3>
            </div>
            <form id="dateFilterForm" class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                    <input type="date" id="startDate" class="form-input w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                    <input type="date" id="endDate" class="form-input w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
                </div>
                <div>
                    <button type="submit" class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium flex items-center justify-center gap-2 shadow-lg">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                        Filter
                    </button>
                </div>
            </form>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
            <div class="stat-card bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-center mb-2">
                    <div class="text-gray-500 text-sm font-medium">Revenue</div>
                    <div class="bg-indigo-100 text-indigo-600 rounded-full p-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                </div>
                <h3 class="mb-0 stat-number" data-value="@Model.TotalRevenue">@Model.TotalRevenue.ToString("N2") €</h3>
                <div class="text-xs text-gray-500 mt-1">@Model.TotalOrders orders</div>
            </div>
            <div class="stat-card bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-center mb-2">
                    <div class="text-gray-500 text-sm font-medium">Customers</div>
                    <div class="bg-green-100 text-green-600 rounded-full p-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                    </div>
                </div>
                <h3 class="mb-0 stat-number" data-value="@Model.TotalCustomers">@Model.TotalCustomers</h3>
                <div class="text-xs text-gray-500 mt-1">Unique customers</div>
            </div>
            <div class="stat-card bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-center mb-2">
                    <div class="text-gray-500 text-sm font-medium">Average cart</div>
                    <div class="bg-blue-100 text-blue-600 rounded-full p-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                </div>
                <h3 class="mb-0 stat-number" data-value="@Model.AverageOrderValue">@Model.AverageOrderValue.ToString("N2") €</h3>
                <div class="text-xs text-gray-500 mt-1">Per order</div>
            </div>
            <div class="stat-card bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-center mb-2">
                    <div class="text-gray-500 text-sm font-medium">Orders</div>
                    <div class="bg-yellow-100 text-yellow-600 rounded-full p-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                    </div>
                </div>
                <h3 class="mb-0 stat-number" data-value="@Model.TotalOrders">@Model.TotalOrders</h3>
                <div class="text-xs text-gray-500 mt-1">Total orders</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <div class="flex items-center gap-2 mb-6">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                        <h5 class="text-xl font-semibold text-gray-800 mb-0">Sales Evolution</h5>
                    </div>
                    <canvas id="salesChart" style="width: 100%; height: 300px;"></canvas>
                </div>
            </div>
            <div>
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <div class="flex items-center gap-2 mb-6">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                        <h5 class="text-xl font-semibold text-gray-800 mb-0">Order Statuses</h5>
                    </div>
                    <canvas id="orderStatusChart" style="width: 100%; height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-purple-50">
                <div class="flex items-center gap-2">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                    <h5 class="text-xl font-semibold text-gray-800 mb-0">Top Products</h5>
                </div>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Product</th>
                            <th class="px-6 py-4 text-right text-sm font-semibold text-gray-700">Sales</th>
                            <th class="px-6 py-4 text-right text-sm font-semibold text-gray-700">Revenue</th>
                            <th class="px-6 py-4 text-right text-sm font-semibold text-gray-700">Views</th>
                            <th class="px-6 py-4 text-right text-sm font-semibold text-gray-700">Conversion Rate</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var product in Model.TopProducts)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="font-semibold text-gray-800">@product.ProductName</div>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                        @product.TotalSales
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <span class="font-semibold text-indigo-600">@product.TotalRevenue.ToString("N2") €</span>
                                </td>
                                <td class="px-6 py-4 text-right text-gray-600">@product.ViewCount</td>
                                <td class="px-6 py-4 text-right">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @(product.ConversionRate >= 5 ? "bg-green-100 text-green-800" : product.ConversionRate >= 2 ? "bg-yellow-100 text-yellow-800" : "bg-gray-100 text-gray-800")">
                                        @product.ConversionRate.ToString("N1")%
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function formatDate(date) {
            return new Date(date).toLocaleDateString('en-US', {
                day: '2-digit',
                month: 'short'
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const salesData = @Json.Serialize(Model.DailySales);
            const salesLabels = Object.keys(salesData).map(date => formatDate(date));
            const salesValues = Object.values(salesData);

            new Chart(document.getElementById('salesChart'), {
                type: 'line',
                data: {
                    labels: salesLabels,
                    datasets: [{
                        label: 'Daily sales',
                        data: salesValues,
                        borderColor: '#4f46e5',
                        backgroundColor: '#4f46e520',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value + ' €';
                                }
                            }
                        }
                    }
                }
            });

            const statusData = @Json.Serialize(Model.OrderStatusDistribution);
            const statusColors = {
                'Pending': '#fbbf24',
                'Paid': '#06b6d4',
                'Processing': '#4f46e5',
                'Shipped': '#6b7280',
                'Delivered': '#10b981',
                'Cancelled': '#ef4444'
            };

            new Chart(document.getElementById('orderStatusChart'), {
                type: 'doughnut',
                data: {
                    labels: Object.keys(statusData),
                    datasets: [{
                        data: Object.values(statusData),
                        backgroundColor: Object.keys(statusData).map(status => statusColors[status] || '#6b7280')
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        });

        document.getElementById('dateFilterForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            window.location.href = `/Dashboard/Index?startDate=${startDate}&endDate=${endDate}`;
        });

        // Animate stat numbers on load
        function animateStats() {
            document.querySelectorAll('.stat-number').forEach(element => {
                const target = parseFloat(element.getAttribute('data-value'));
                const isDecimal = target % 1 !== 0;
                const duration = 1500;
                const start = 0;
                const increment = target / (duration / 16);
                let current = start;

                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    element.textContent = isDecimal ? current.toFixed(2) + ' €' : Math.floor(current);
                }, 16);
            });
        }

        // Trigger animation when page loads
        window.addEventListener('load', animateStats);
    </script>
}
