@model WebApplication2.Models.Product
@{
    ViewData["Title"] = "Product details";
    var photoPath = Url.Content("~/images/" + (Model.Image ?? "noimage.jpg"));
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
            <div class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </div>
            <span class="breadcrumb-separator">/</span>
            <div class="breadcrumb-item">
                <a asp-controller="Product" asp-action="Index">Products</a>
            </div>
            <span class="breadcrumb-separator">/</span>
            <div class="breadcrumb-item">
                <span>@Model.Name</span>
            </div>
        </nav>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <div class="bg-white rounded-xl shadow p-3 h-full min-h-[500px] flex items-center justify-center relative group">
                    <img src="@photoPath" class="w-full h-full object-contain rounded-lg cursor-pointer transition-transform duration-300 group-hover:scale-105" 
                         alt="Product image" 
                         onclick="lightbox.open('@photoPath', '@Model.Name')" />
                    <button onclick="lightbox.open('@photoPath', '@Model.Name')" 
                            class="absolute top-4 right-4 bg-white/80 hover:bg-white rounded-full p-2 shadow-lg opacity-0 group-hover:opacity-100 transition-opacity"
                            title="Zoom image">
                        <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
                        </svg>
                    </button>
                </div>
            </div>
            <div>
                <div class="bg-white rounded-xl shadow p-6 h-full min-h-[500px]">
                    <h3 class="font-bold text-3xl mb-2">@Model.Name</h3>
                    <div class="text-gray-500 mb-4 flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        @Model.Category.CategoryName
                    </div>
                    <div class="flex gap-3 mb-6">
                        <span class="product-badge product-badge-price text-lg px-4 py-2">@Model.Price DT</span>
                        <span class="product-badge product-badge-stock @(Model.QteStock == 0 ? "out-of-stock" : (Model.QteStock < 10 ? "low-stock" : ""))">Stock: @Model.QteStock</span>
                    </div>
                    
                    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                    {
                        <div class="mb-6">
                            <a asp-controller="Panier" asp-action="AddProduct" asp-route-id="@Model.ProductId" 
                               class="w-full bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium flex items-center justify-center gap-2 shadow-lg">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                                Add to Cart
                            </a>
                        </div>
                    }

                    <div class="flex flex-wrap gap-3 mt-6 pt-6 border-t border-gray-200">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <a asp-action="Edit" asp-route-id="@Model?.ProductId" 
                                   class="w-12 h-12 flex items-center justify-center bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 hover:scale-110 transition-all duration-200 shadow-sm hover:shadow-md"
                                   title="Edit">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </a>
                            }
                            <button class="w-12 h-12 flex items-center justify-center bg-red-100 text-red-600 rounded-lg hover:bg-red-200 hover:scale-110 transition-all duration-200 shadow-sm hover:shadow-md toggle-wishlist" 
                                    data-product-id="@Model.ProductId"
                                    title="Add to wishlist">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                            </button>
                        }
                        <a asp-action="Index" 
                           class="w-12 h-12 flex items-center justify-center bg-indigo-100 text-indigo-600 rounded-lg hover:bg-indigo-200 hover:scale-110 transition-all duration-200 shadow-sm hover:shadow-md"
                           title="Back to list">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/js/lightbox.js" asp-append-version="true"></script>
}
