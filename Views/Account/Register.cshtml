@model WebApplication2.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="py-5">
    <div class="container mx-auto px-4">
        <div class="flex justify-center">
            <div class="w-full max-w-md">
                <div class="bg-white rounded-xl shadow p-6">
                    <div class="text-center mb-6">
                        <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-3">
                            <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                            </svg>
                        </div>
                        <h3 class="mb-0 text-indigo-600 font-semibold text-2xl">Register</h3>
                        <p class="text-gray-500 text-sm mt-1">Create a new account to get started.</p>
                    </div>
                    <form method="post" novalidate>
                        <div asp-validation-summary="All" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-4 text-sm"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="Email" class="form-input w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" placeholder="your.email@example.com" />
                            <span asp-validation-for="Email" class="form-error-message"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="Password" class="form-input w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" placeholder="Your password" />
                            <span asp-validation-for="Password" class="form-error-message"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="ConfirmPassword" class="form-input w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" placeholder="Confirm password" />
                            <span asp-validation-for="ConfirmPassword" class="form-error-message"></span>
                        </div>

                        <div class="w-full">
                            <button type="submit" class="w-full bg-indigo-600 text-white px-4 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium flex items-center justify-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                                </svg>
                                Sign up
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <small class="text-gray-500">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-indigo-600 hover:underline">Sign in</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
