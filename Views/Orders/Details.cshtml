@model WebApplication2.Models.Order
@using WebApplication2.Models
@{
    ViewData["Title"] = "Order details";
    var history = ViewBag.History as IEnumerable<OrderHistory> ?? Enumerable.Empty<OrderHistory>();
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <div class="mb-6">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-4">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 mb-1">Order #@Model.Id</h1>
                    <p class="text-gray-500 text-sm">Order details and history</p>
                </div>
                <div class="flex flex-wrap gap-2">
                    @if (Model.Status == OrderStatus.Paid)
                    {
                        <a asp-controller="Invoice" asp-action="Download" asp-route-orderId="@Model.Id" class="bg-green-50 text-green-600 px-4 py-2 rounded-lg hover:bg-green-100 transition flex items-center gap-2 font-medium" target="_blank">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Download Invoice
                        </a>
                    }
                    <a href="/Orders/Index" class="bg-indigo-50 text-indigo-600 px-4 py-2 rounded-lg hover:bg-indigo-100 transition flex items-center gap-2 font-medium">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Back
                    </a>
                </div>
            </div>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-50 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded-r-lg mb-4">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <div class="bg-white rounded-xl shadow-sm p-6 h-full">
                    <div class="flex items-center gap-2 mb-4">
                        <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <h5 class="text-lg font-semibold text-gray-800 mb-0">Customer Information</h5>
                    </div>
                    <div class="space-y-4">
                        <div>
                            <label class="text-xs text-gray-500 block mb-1">Name</label>
                            <div class="font-semibold text-gray-800 text-lg">@Model.CustomerName</div>
                        </div>
                        <div>
                            <label class="text-xs text-gray-500 block mb-1">Email</label>
                            <div class="text-gray-800 flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                @Model.Email
                            </div>
                        </div>
                        <div>
                            <label class="text-xs text-gray-500 block mb-1">Delivery Address</label>
                            <div class="text-gray-800 flex items-start gap-2">
                                <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <span>@Model.Address</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <div class="bg-white rounded-xl shadow-sm p-6 h-full">
                    <div class="flex items-center gap-2 mb-4">
                        <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <h5 class="text-lg font-semibold text-gray-800 mb-0">Order Information</h5>
                    </div>
                    <div class="space-y-4">
                        <div>
                            <label class="text-xs text-gray-500 block mb-1">Order Date</label>
                            <div class="font-semibold text-gray-800 flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                @Model.OrderDate.ToLocalTime().ToString("f")
                            </div>
                        </div>
                        <div>
                            <label class="text-xs text-gray-500 block mb-1">Status</label>
                            <div>
                                @{
                                    var statusClass = Model.Status switch
                                    {
                                        OrderStatus.Pending => "bg-yellow-100 text-yellow-800",
                                        OrderStatus.Paid => "bg-blue-100 text-blue-800",
                                        OrderStatus.Processing => "bg-indigo-100 text-indigo-800",
                                        OrderStatus.Shipped => "bg-blue-100 text-blue-800",
                                        OrderStatus.Delivered => "bg-green-100 text-green-800",
                                        OrderStatus.Cancelled => "bg-red-100 text-red-800",
                                        _ => "bg-gray-100 text-gray-800"
                                    };
                                }
                                <span class="px-3 py-1 rounded-full text-sm font-medium @statusClass">@Model.Status</span>
                            </div>
                        </div>
                        <div class="pt-4 border-t border-gray-200">
                            <label class="text-xs text-gray-500 block mb-1">Total Amount</label>
                            <div class="text-2xl font-bold text-green-600">@Model.TotalAmount.ToString("F2") €</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="md:col-span-2">
                <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                    <div class="p-4 border-b border-gray-200 flex items-center gap-2">
                        <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                        <h5 class="text-lg font-semibold text-gray-800 mb-0">Order Items</h5>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="w-full table-responsive-card">
                            <thead class="bg-gray-50 hidden md:table-header-group">
                                <tr>
                                    <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Product</th>
                                    <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Quantity</th>
                                    <th class="px-4 py-3 text-right text-sm font-medium text-gray-700">Unit Price</th>
                                    <th class="px-4 py-3 text-right text-sm font-medium text-gray-700">Total</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                                @foreach (var it in Model.Items ?? Enumerable.Empty<WebApplication2.Models.OrderItem>())
                                {
                                    <tr class="hover:bg-gray-50 transition-colors">
                                        <td class="px-4 py-3 font-semibold text-gray-800" data-label="Product">@it.ProductName</td>
                                        <td class="px-4 py-3 text-center" data-label="Quantity">
                                            <span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-lg text-sm font-semibold">@it.Quantity</span>
                                        </td>
                                        <td class="px-4 py-3 text-right" data-label="Unit Price">@it.Price.ToString("F2") €</td>
                                        <td class="px-4 py-3 text-right font-bold text-indigo-600" data-label="Total">@((it.Price * it.Quantity).ToString("F2")) €</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-gradient-to-r from-indigo-50 to-purple-50">
                                <tr>
                                    <th colspan="3" class="px-4 py-3 text-right font-semibold text-gray-800">Total:</th>
                                    <th class="px-4 py-3 text-right text-green-600 font-bold text-lg">@Model.TotalAmount.ToString("F2") €</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            @if (history.Any())
            {
                <div class="md:col-span-2">
                    <div class="bg-white rounded-xl shadow-sm p-6">
                        <div class="flex items-center gap-2 mb-6">
                            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <h5 class="text-lg font-semibold text-gray-800 mb-0">Order History</h5>
                        </div>
                        <div class="timeline">
                            @{ var orderedHistory = history.OrderByDescending(x => x.ChangedAt).ToList(); }
                            @for (int i = 0; i < orderedHistory.Count; i++)
                            {
                                var h = orderedHistory[i];
                                var isActive = i == 0;
                                <div class="timeline-item @(isActive ? "active" : "")">
                                    <div class="timeline-content">
                                        <div class="timeline-date">@h.ChangedAt.ToLocalTime().ToString("f")</div>
                                        <div class="timeline-status">
                                            @{
                                                var histStatusClass = h.Status switch
                                                {
                                                    OrderStatus.Pending => "bg-yellow-100 text-yellow-800",
                                                    OrderStatus.Paid => "bg-blue-100 text-blue-800",
                                                    OrderStatus.Processing => "bg-indigo-100 text-indigo-800",
                                                    OrderStatus.Shipped => "bg-blue-100 text-blue-800",
                                                    OrderStatus.Delivered => "bg-green-100 text-green-800",
                                                    OrderStatus.Cancelled => "bg-red-100 text-red-800",
                                                    _ => "bg-gray-100 text-gray-800"
                                                };
                                            }
                                            <span class="px-3 py-1 rounded-full text-sm font-medium @histStatusClass">@h.Status</span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(h.Note))
                                        {
                                            <div class="mt-2 text-sm text-gray-600">@h.Note</div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <link href="~/css/timeline.css" rel="stylesheet" asp-append-version="true" />
}
