@{
    ViewData["Title"] = "Payment cancelled";
    var orderId = ViewBag.OrderId as int? ?? 0;
}

<section class="py-4">
    <div class="container mx-auto px-4">
        <div class="flex justify-center">
            <div class="w-full max-w-lg">
                <div class="bg-white rounded-xl shadow-lg p-8 text-center">
                    <div class="mb-6">
                        <div class="w-20 h-20 mx-auto bg-yellow-100 rounded-full flex items-center justify-center mb-4">
                            <svg class="w-12 h-12 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                        </div>
                    </div>
                    
                    <h2 class="text-3xl font-bold text-gray-800 mb-3">Payment Cancelled</h2>
                    
                    <p class="text-gray-500 mb-6">
                        Payment for order <strong class="text-indigo-600">#@orderId</strong> has been cancelled.
                    </p>
                    
                    <div class="bg-yellow-50 border-l-4 border-yellow-500 rounded-r-lg p-6 mb-6">
                        <div class="flex items-start gap-3">
                            <svg class="w-6 h-6 text-yellow-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <div class="text-left">
                                <strong class="text-gray-800 block mb-1">What to do now?</strong>
                                <p class="text-gray-600 text-sm mb-0">You can retry the payment or contact us for assistance.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex flex-col md:flex-row gap-3 justify-center">
                        <a href="/Panier/Checkout" class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition btn-hover-lift font-medium flex items-center justify-center gap-2 shadow-lg">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                            Retry Payment
                        </a>
                        <a href="/Panier/Index" class="bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition btn-hover-lift font-medium flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            Back to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
